<div class="container">
  <div class="jumbotron">
    <img class="img-fluid" src=""/>
    <h1 class="display-3">Scraper</h1>
    <p class="lead">Scraping Articles from <a href="https://mynintendonews.com/">mynintendonews.com</a></p>
  </div>
  <div class="row">
    {{#each Article}}
    <div class="col-md-9 article" data-id={{_id}}>

      <div class="head row">
        <div class="col-md-10">
          <a href={{link}}><h1>{{title}}</h1></a>
        </div>
        <div class="col-md-2">
          <button class="btn btn-danger delete" data-id={{_id}}>Remove Article</button>
        </div>
        
        
      </div>

      <div class="content">
        <p>{{description}}</p>
      </div>

        <div class="row comments">
          <div class="offset-md-10 col-md-2">
            <button class="post-comment btn btn-primary" data-id={{_id}}>Post Comment</button>
          </div>
          {{#each comments}}
            <div class="offset-md-1 col-md-11 comment">
              <p>{{body}}</p>
              <h6>by: {{user}}</h6>
            </div>
          {{/each}}

        </div>
    </div>
    {{/each}}
  </div>
</div>

{{!-- Modal --}}
<div class="modal fade" id="comment-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6>On:</h6>
        <h5 class="modal-title" id="comment-modalLabel">Help</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="form-group">
          <label for="user">Your Name:</label>
          <input type="text" class="form-control" name="user" id="user-input" aria-describedby="helpId" placeholder="">
        </div>

        <div class="form-group">
          <label for="comment">Your Comment:</label>
          <input type="text" class="form-control" name="comment" id="comment-input" aria-describedby="helpId" placeholder="">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary post-btn">Post</button>
      </div>
    </div>
  </div>
</div>

<script src="./js/app.js"></script>